@model WishListViewModel

<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="~/css/wishlistAndCartPartialStyle.css">
    </head>
    <body>
        <div class="col-md-5">
            <div class="card shadow">
                <div class="row no-gutters">
                    <div class="col-md-5">
                        <img class="card-img" src="@Model.ImageUrl" alt="Book Image">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <h4 class="card-title">@Model.Title</h4>
                            <p class="card-text">Author: <b>@Model.Author</b></p>
                            <p class="card-text">
                                Price:
                                <b>@($"{Model.Price:f2}") BGN</b>
                            </p>
                            <p class="card-text">Age Restriction: <b>@Model.AgeRestriction</b></p>
                            <div class="mb-2">
                                <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-success mr-2" aria-label="Details">
                                    <span aria-hidden="true">📕</span> Details
                                </a>
                                <form asp-controller="Wishlist" asp-action="MoveToCart" asp-route-id="@Model.Id" method="post">
                                    <button type="submit" class="btn btn-success ml-2" aria-label="Move To Cart">
                                        <span aria-hidden="true">🛒</span> Move To Cart
                                    </button>
                                </form>
                            </div>
                            <form class="ml-2" asp-controller="Wishlist" asp-action="RemoveFromWishlist" asp-route-id="@Model.Id" method="post">
                                <button class="btn btn-danger ml-2" type="submit" aria-label="Remove">
                                    <span aria-hidden="true">🗑</span> Remove
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>